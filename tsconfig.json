{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "target": "ES2020",
        // "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
}
